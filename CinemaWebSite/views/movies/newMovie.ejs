<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    
  </head>
  <body class="bgColor">
    <%- include ../menu.ejs -%>

    <div class="container-fluid">
      <div class="row section">
        <div class="col-md-4">
          <div class="allTitle">
            <a href="/movies">All Movies</a>
          </div>

          <b>Add Movie</b>
        </div>
        
      </div>
    </div>

    <div class="content">

      <h1><%= title %></h1>
    
      <div class="container col-sm-12">
        <form action="/movies/new/add" method="POST" class="addForm">
          <div class="form-group">
            <label for="name">Name:</label>
            <input type="text" class="form-control col-md-6" id="name" placeholder="Enter name" name="name">
          </div>
          <div class="form-group">
            <label for="genres">Genres:</label>
            <input type="text" class="form-control col-md-6" id="genres" placeholder="Enter genres" name="genres">
          </div>
          <div class="form-group">
            <label for="imageUrl">Image url:</label>
            <input type="text" class="form-control col-md-6" id="imageUrl" placeholder="Enter image url" name="imageUrl">
          </div>
          <div class="form-group">
            <label for="premiered">Premiered:</label>
            <input type="date" class="form-control col-md-6" id="premiered" placeholder="Enter premierd" name="premiered" required>
          </div>
          
          <button type="submit" class="btn btn-primary">Save</button>
          <a href="/movies">
            <button type="button" class="btn btn-primary">Cancel</button>
          </a>
        </form>
        
      </div>

  </div>


  </body>
</html>
