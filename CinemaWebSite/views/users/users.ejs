<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1><%= title %></h1>
    <%- include ../menu.ejs -%>
    
    <b>All Users</b> &nbsp;
    <a href="/users/new">Add User</a>

    <% users.forEach(user => { %>
      <div class="card" style="width: 28rem;">
        <div class="card-body">
          <h5 class="card-title">Name: <%= user.firstName %> <%= user.lastName %></h5>
          <p class="card-text">User Name: <%= user.username %></p>
          <p class="card-text">Session Time Out: <%= user.sessionTimeOut %></p>
          <p class="card-text">Created Date: <%= user.createdDate %></p>
          <p class="card-text">Permissions: <%= user.permissions %></p>
          <a href="/users/edit/<%= user.id %>" class="btn btn-primary">Edit</a>
          <a href="/users/delete/<%= user.id %>" class="btn btn-primary">Delete</a>
        </div>
      </div>
    <% })%>


  </body>
</html>
